set number
set relativenumber

set hlsearch
set incsearch
set ignorecase
set smartcase

" indentation
set autoindent
set smartindent
set expandtab
set smarttab
set shiftwidth=2
set tabstop=2

" no error bells

syntax on

" scroll
set scrolloff=8

" re-maps
inoremap jj <Esc>

let mapleader=" "

nnoremap <leader><CR> :noh<CR>
